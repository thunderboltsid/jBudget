<p><%= @poll %></p>
<div style="display:flex;">
  <div style="flex-grow:1">
    <form action='cast' method='post'>
      <ul class='unstyled'>
        <% Choices.each do |id, text| %>
          <li>
            <div style="display:flex;justify-content:space-between;width:40vw">
              <label>
                <%= id %>:
              </label>
              <input style="width:40px" type='number' min='0' max='100' name='<%= id %>' value='<%= text %>' id='<%= id %>' />
            </div>
          </li>
        <% end %>
      </ul>
      <div style="display:flex; justify-content: space-around;">
        <input id="submitForm" type='submit' value='Cast this vote!' class='btn btn-primary'/>
        <p id="msg"></p>
      </div>
    </form>
  </div>
  <div id="chart" style="flex-grow:1">
    <svg>
    </svg>
  </div>

</div>
<script type="text/javascript" src="/static/scripts/index.js"></script>
<style type="text/css">
#chart svg {
  height: 400px;
}
</style>
