<p><%= @poll %></p>
<div style="display:flex;">
  <form action='cast' method='post' style="flex-grow:1">
    <ul class='unstyled'>
      <% Choices.each do |id, text| %>
        <li>
          <div style="display:flex;justify-content:space-between;width:40vw">
            <label>
              <%= id %>:
            </label>
            <input style="width:40px" type='number' min='0' max='100' name='vote' value='<%= text %>' id='<%= id %>' />
          </div>
        </li>
      <% end %>
    </ul>
    <button type='submit' class='btn btn-primary'>Cast this vote!</button>
  </form>
  <div id="chart" style="flex-grow:1">
    <svg>
    </svg>
  </div>
</div>
<script type="text/javascript" src="/static/scripts/index.js"></script>
<style type="text/css">
#chart svg {
  height: 400px;
}
</style>
